@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<style>
    .login-form {
        width: 340px;
        margin: 50px auto;
        font-size: 15px;
    }

        .login-form form {
            margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
        }

    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }

    .btn {
        font-size: 15px;
        font-weight: bold;
    }
</style>
<div class="login-form">

    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Context.Request.Query["ReturnUrl"]" method="post">
        <h2 class="text-center">Log in</h2>

        <div class="form-group">
            <input asp-for="User.Username" type="text" class="form-control" placeholder="Username">
        </div>
        <span asp-validation-for="User.Username" class="text-danger"></span>

        <div class="form-group">
            <input asp-for="User.Password" type="password" class="form-control" placeholder="Password">
        </div>
        <span asp-validation-for="User.Password" class="text-danger"></span>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>
        
    </form>
     
</div>
